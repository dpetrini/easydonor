extends layout

block content
  table(class='table-margin table table-striped table-bordered table-hover table-condensed')
    thead
      tr
        th First Name
        th Last Name
        th Phone
        th Email
        th Blood Type
        th Latitude
        th Longitude
        th _id
    tbody
      each donor in donors
        tr 
          td= donor.firstName 
          td= donor.lastName
          td= donor.contactNumber
          td= donor.emailAddress
          td= donor.bloodGroup
          td= donor.lat
          td= donor.long
          td= donor._id